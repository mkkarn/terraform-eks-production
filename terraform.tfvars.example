# terraform.tfvars.example - Template for users to copy

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Cluster Configuration
cluster_name       = "my-eks-cluster"  # Choose a unique name
kubernetes_version = "1.28"

# Networking - Adjust if needed
vpc_cidr        = "10.0.0.0/16"
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Node Configuration - Adjust based on workload
desired_nodes  = 2
min_nodes      = 1
max_nodes      = 4
instance_types = ["t3.small", "t3a.small"]
capacity_type  = "SPOT"  # Use SPOT for cost savings, ON_DEMAND for stability

# Security - IMPORTANT: Replace with your IP address
allowed_cidrs = ["YOUR_PUBLIC_IP/32"]  # Run: curl ifconfig.me

# Environment
environment = "dev"

# NAT Gateway - Set to false for multi-NAT (HA) in production
enable_nat_gateway = true
single_nat_gateway = true  # Single NAT for dev, false for prod

# Tags (optional)
tags = {
  Owner     = "YourName"
  Project   = "EKS-Demo"
  ManagedBy = "Terraform"
}